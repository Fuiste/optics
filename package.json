{
  "name": "@fuiste/optics",
  "version": "0.1.1",
  "description": "Type-safe, functional optics (lenses/prisms) for immutable data",
  "main": "./dist/index.mjs",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs,.cjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.mjs,.cjs --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "release:publish": "npm publish --access public",
    "test:watch": "vitest",
    "publish": "npm publish --access public"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cts,mts,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,cts,mts}": [
      "eslint --fix"
    ]
  }
}